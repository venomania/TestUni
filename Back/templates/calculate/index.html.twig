{% extends 'base.html.twig' %}

{% block title %}Hello CalculateController!{% endblock %}

{% block body %}
<div class="container calculate">
  <div class="row">
    <div class="col-6 offset-3 title">
      <h1>calculatrice</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-8 offset-2 result"></div>
  </div>
  <div class="row keyboard">
    <div class="col-3">
    <div class="touch" data-value="1" >1</div></div>
    <div class="col-3"><div class="touch" data-value="2">2</div></div>
    <div class="col-3"><div class="touch" data-value="3">3</div></div>
    <div class="col-3"><div class="touch" data-value="+">+</div></div>
  </div>
  <div class="row keyboard">
    <div class="col-3">
    <div class="touch" data-value="4">4</div></div>
    <div class="col-3"><div class="touch" data-value="5">5</div></div>
    <div class="col-3"><div class="touch" data-value="6">6</div></div>
    <div class="col-3"><div class="touch" data-value="-">-</div></div>
  </div>
  <div class="row keyboard">
    <div class="col-3">
    <div class="touch" data-value="7">7</div></div>
    <div class="col-3"><div class="touch" data-value="8">8</div></div>
    <div class="col-3"><div class="touch" data-value="9">9</div></div>
    <div class="col-3"><div class="touch" data-value="/">/</div></div>
  </div>
  <div class="row keyboard">
    <div class="col-3">
    <div data-value="%">%</div></div>
    <div class="col-3"><div class="touch" data-value="0">0</div></div>
    <div class="col-3"><div class="touch" data-value="√x">√x</div></div>
    <div class="col-3"><div class="touch" data-value="C">C</div></div>
  </div>
  <div class="row keyboard">
    <div class="col-3 offset-9"><div class="touch" data-value="=">=</div></div>
  </div>
</div>
{% endblock %}
